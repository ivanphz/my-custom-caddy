{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Shanghai",
  "schedule": ["before 6am on saturday"], 
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "description": "Caddy 核心更新：立即执行，自动合并",
      "matchPackageNames": ["github.com/caddyserver/caddy"],
      "schedule": null,
      "automerge": true,
      "labels": ["caddy-core"]
    },
    {
      "description": "所有插件：每周五晚上打包更新，自动合并",
      "matchPackagePatterns": ["github.com/*"],
      "excludePackageNames": ["github.com/caddyserver/caddy"],
      "groupName": "Weekly Plugin Updates",
      "schedule": ["after 6pm on friday"],
      "automerge": true,
      "labels": ["plugins"]
    },
    {
       "description": "忽略间接依赖或无关更新",
       "matchUpdateTypes": ["digest"],
       "enabled": false
    }
  ]
}
